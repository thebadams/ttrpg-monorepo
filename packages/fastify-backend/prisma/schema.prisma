generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Class {
  id     Int    @id @default(autoincrement())
  name   String @unique
  baseHP Int    @default(7)
  bonuses Abilities[]
  armors Armor[]
  features Feature[]

}

enum Abilities {
  STR
  DEX
  CON
  INT
  WIS
  CHA

}

enum ArmorTypes {
  NONE
  LIGHT
  HEAVY
  SHIELD
}

model Armor {
  id Int @id@default(autoincrement())
  type ArmorTypes
  baseAC Int
  atkPenalty Int
  classes Class[]
  @@unique([type, baseAC, atkPenalty])
}

