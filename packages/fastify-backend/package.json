{
	"name": "fastify-backend",
	"version": "1.0.0",
	"description": "Fastify Backend Utilizing tRPC",
	"main": "src/index.ts",
	"repository": "https://www.github.com/thebadams/ttrpg-monorepo/packages/fastify-backend",
	"author": "thebadams",
	"license": "MIT",
	"type": "module",
	"dependencies": {
		"@fastify/cors": "^8.3.0",
		"@prisma/client": "5.0.0",
		"@trpc/server": "^10.36.0",
		"fastify": "^4.21.0",
		"zod": "^3.21.4"
	},
	"devDependencies": {
		"@swc/cli": "^0.1.62",
		"@swc/core": "^1.3.74",
		"@types/node": "^20.4.5",
		"nodemon": "^3.0.1",
		"prisma": "^5.0.0",
		"rimraf": "^5.0.1",
		"ts-node": "^10.9.1",
		"ts-node-dev": "^2.0.0",
		"typescript": "^5.1.6"
	},
	"scripts": {
		"prestart": "yarn build",
		"start": "node dist/index.js",
		"dev": "yarn watch & nodemon dist/index.js",
		"watch": "rimraf dist && swc ./src -d dist -w",
		"build": "rimraf dist && swc ./src -d dist",
		"postbuild": "yarn db:generate",
		"db:migrate": "prisma migrate dev",
		"db:seed": "prisma db seed",
		"db:generate": "prisma generate",
		"typecheck": "tsc --noEmit"
	},
	"prisma": {
		"seed": "ts-node prisma/seed.ts"
	}
}
